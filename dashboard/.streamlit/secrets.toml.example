# Streamlit Cloud Secrets Configuration
# Copy this file to secrets.toml and fill in your Snowflake credentials
#
# For Streamlit Cloud:
# 1. Go to your app settings > Secrets
# 2. Paste the content below with your actual values
#
# For local development:
# 1. Copy this file to secrets.toml in the same directory
# 2. Fill in your Snowflake credentials

[snowflake]
# Your Snowflake account identifier (e.g., "abc12345.us-east-1")
account = "your-account-identifier"

# Snowflake username
user = "your-username"

# Snowflake password (use strong password)
password = "your-password"

# Warehouse name for queries
warehouse = "FRAUDLENS_WH"

# Database containing the Gold layer tables
database = "FRAUDLENS_DB"

# Schema where Gold tables are stored
schema = "GOLD"
